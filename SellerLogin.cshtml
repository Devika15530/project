@model Dmart.Models.Seller

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SellerLogin</title>
   
    <style>
        body {
  margin: 0;
  padding: 0;
  background-color:antiquewhite;
  height: 100vh;
}
        #login .container #login-row #login-column #login-box {
  margin-top: 120px;
  max-width: 600px;
  height: 320px;
  border: 1px solid #9C9C9C;
  background-color: #EAEAEA;
}
        #login .container #login-row #login-column #login-box #login-form {
  padding: 20px;
}
#login .container #login-row #login-column #login-box #login-form #register-link {
  margin-top: -85px;
}
    </style>


    
</head>
<body>

     <center> <marquee><h4 style="color:blue">Welcome Seller</h4></marquee></center>
    <hr />
    <center> <h3 class="text-center text-info" style="align-self:center">SellerLoginForm</h3></center>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="loginform" asp-action="SellerLogin">
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <table border="0" align="center" height="150" width="150" cellpadding="1" cellspacing="2">0
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="Password" class="control-label"></label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <center><input type="submit" value="login" class="btn btn-primary" /></center>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </form>
                        <div>
                            @ViewBag.message
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
   

</body>
</html>
